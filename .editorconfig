# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Dart/Flutter files
[*.dart]
indent_style = space
indent_size = 2
max_line_length = 100

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Gradle files
[*.gradle]
indent_style = space
indent_size = 4

# Kotlin files
[*.kt]
indent_style = space
indent_size = 4

# XML files (Android resources)
[*.xml]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 120

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Batch files
[*.{bat,cmd}]
indent_style = space
indent_size = 2
